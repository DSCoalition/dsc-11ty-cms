{% assign members = collections.boardMemberItem %}

{% for member in members %}
  <div class="flex flex-col mx-auto items-center text-center p-4 desktop:p-0">
    <img src="{{ member.data.memberImage }}" alt="{{ member.data.memberAlt }}" class="w-full h-auto pb-6" />
    <h6 class="text-blue m-0 text-base">{{ member.data.memberName }}</h6>
    <h5 class="text-grayLight m-0 text-[12.8px]">{{ member.data.memberOrganization }}</h5>
    <h4 class="text-blue text-[12.8px]">{{ member.data.memberRole }}</h4>
  </div>
{% endfor %}
