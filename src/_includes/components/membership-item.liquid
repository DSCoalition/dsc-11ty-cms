{% assign membershipItems = collections.membershipItems %}

{% for item in membershipItems %}
  <div class="font-sans flex flex-col items-start text-start mr-auto desktop:mb-4 desktop:mt-4 membership-item-wrapper">
    <div class="membership-item-container" onclick="this.children[1].style.display === 'none' ? this.children[1].style.display = 'block' : this.children[1].style.display = 'none'">
      <div class="membership-item-title" style="display: inline-flex;">
        <div style="background: #5569B0; text-align: center; border-radius: 100%; width: 48px; height: 48px; display: block; margin-top: auto; margin-bottom: auto;">
          <img
            style="width: 50%; height: 50%; margin-left: auto; margin-right: auto; display: block; margin-top: 0.75rem"
            src="/assets/icons/membership/{{ item.data.icon }}.png"
            alt="" />
        </div>

        {{ item.data.title | markdownify }}
      </div>
      <div class="membership-item-content" style="display: none;">
        {{ item.content | markdownify }}
      </div>
    </div>
  </div>
{% endfor %}