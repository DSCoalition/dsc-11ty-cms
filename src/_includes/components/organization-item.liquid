{% assign orgs = collections.orgItem %}

<div class="p-1 mt-6 tablet:columns-2 desktop:gap-x-20 desktop:mt-0">
  {% for org in orgs %}
    <div class="flex tablet:py-8 tablet:px-2 desktop:justify-between md:p-4 break-inside-avoid-column">
      <div class="mt-12 flex-none items-center w-16 h-1/2 tablet:w-20 desktop:w-40">
        <a href="{{ org.data.linkURL }}"><img
            src="{{ org.data.organizationImage }}"
            alt="{{ org.data.organizationAlt }}"
            class="max-w-full h-auto pt-2 pr-4 desktop:p-0 desktop:pr-8" /></a>
      </div>
      <div class="mt-12 grow break-inside-avoid-column">
        <p class="mb-4">
          {{ org.data.organizationDescription }}{% if org.data.foundingMember %}
            <i>*</i>
          {% endif %}
        </p>
      </div>
    </div>
  {% endfor %}
</div>
